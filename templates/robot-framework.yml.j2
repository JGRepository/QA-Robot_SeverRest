name: Testes Automatizados com Robot Framework

on:
  push:
    branches:
      - main
  pull_request:

jobs:
  build:
    name: Robot@${{ matrix.browser }}_${{ matrix.os }}
    strategy:
      fail-fast: false
      matrix:
        os: [ubuntu-latest]
        browser: [chromium, firefox, webkit] # Testes rodarão nesses navegadores

    runs-on: ${{ matrix.os }}

    permissions:
      contents: write

    steps:
      - name: Checkout do código
        uses: actions/checkout@v3

      - name: Instalar Python e dependências
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install robotframework-seleniumlibrary
          sudo apt-get update
          sudo apt-get install -y chromium-chromedriver firefox-geckodriver

      - name: Executar testes no ${{ matrix.browser }}
        run: |
          robot --variable BROWSER:${{ matrix.browser }} --variable HEADLESS:true --outputdir results/${{ matrix.browser }} tests/

      - name: Armazenar Relatórios
        uses: actions/upload-artifact@v3
        with:
          name: Test-Reports-${{ matrix.browser }}
          path: results/${{ matrix.browser }}/

      - name: Salvando Resultado dos Testes
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: resultado-testes-${{ matrix.browser }}
          path: results/${{ matrix.browser }}